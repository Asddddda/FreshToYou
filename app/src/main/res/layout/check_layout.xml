<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/logo"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="生鲜箱 ：20221062301-G"
            android:layout_marginStart="18dp"
            android:textColor="#4A4646"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:text="重庆"
            android:textColor="#201B1B"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/map_card"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/map"
            android:layout_marginTop="0dp"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="13dp"
                android:layout_weight="0.33">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/carry_loads"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="11dp"
                    android:gravity="center_horizontal"
                    android:textColor="#504E4E"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="0dp"
                    android:text="运输物品"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="16dp"
                    android:gravity="center_horizontal"
                    android:textColor="#221F1F"
                    android:layout_marginTop="-15dp"
                    android:layout_marginStart="0dp"
                    android:text="草莓"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/op_state"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="11dp"
                    android:textColor="#504E4E"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="0dp"
                    android:gravity="center_horizontal"
                    android:text="运行状态"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="16dp"
                    android:textColor="#221F1F"
                    android:layout_marginTop="-15dp"
                    android:layout_marginStart="0dp"
                    android:gravity="center_horizontal"
                    android:text="正常"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/battery"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="11dp"
                    android:textColor="#504E4E"
                    android:layout_marginTop="-20dp"
                    android:layout_marginStart="0dp"
                    android:gravity="center_horizontal"
                    android:text="剩余电量"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textSize="16dp"
                    android:textColor="#221F1F"
                    android:layout_marginTop="-15dp"
                    android:layout_marginStart="0dp"
                    android:gravity="center_horizontal"
                    android:text="良好"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginStart="50dp"
                        android:layout_width="12dp"
                        android:background="@drawable/tem"
                        android:layout_height="20dp">
                    </ImageView>
                    <TextView
                        android:id="@+id/check_t_text"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:textSize="12dp"
                        android:textColor="#6C6B6B"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="7dp"
                        android:text="温度：2.5℃"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginStart="20dp"
                        android:layout_width="20dp"
                        android:background="@drawable/co2"
                        android:layout_height="16dp">
                    </ImageView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:textSize="12dp"
                        android:textColor="#6C6B6B"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="7dp"
                        android:text="CO2浓度：18%"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="-4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginStart="50dp"
                        android:layout_width="15dp"
                        android:background="@drawable/wet"
                        android:layout_height="18dp">
                    </ImageView>
                    <TextView
                        android:id="@+id/check_h_text"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:textSize="12dp"
                        android:textColor="#6C6B6B"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="3dp"
                        android:text="湿度：93.5%"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginStart="20dp"
                        android:layout_width="20dp"
                        android:background="@drawable/o2"
                        android:layout_height="16dp">
                    </ImageView>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:textSize="12dp"
                        android:textColor="#6C6B6B"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="7dp"
                        android:text="O2浓度：2.9%"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

